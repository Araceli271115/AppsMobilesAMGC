<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <TableRow
        android:id="@+id/SeparadorFoto"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.3"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonInicio"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="Inicio"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </TableRow>

    <TableRow
        android:id="@+id/SeparadorId"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Id"
            android:textColor="@android:color/white"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/EditTextId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorNombre"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Nombre"
            android:textColor="@android:color/white"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/EditTextNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorApellidoP"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewApellidoP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Apellido P."
            android:textColor="@android:color/white"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/EditTextApellidoP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorApellidoM"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewApellidoM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Apellido M."
            android:textColor="@android:color/white"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/EditTextApellidoM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorNomina"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewNomina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="No. NÃ³mina"
            android:textColor="@android:color/white"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/EditTextNomina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorTelefono"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Telefono"
            android:textColor="@android:color/white"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/EditTextTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorArea"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Puesto"
            android:textColor="@android:color/white"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/EditTextPuesto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorEstatus"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextViewEstatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Estatus"
            android:textColor="@android:color/white"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/EditTextEstatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@android:color/background_light"
            android:inputType="textPersonName"></EditText>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorBotonDetalles"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>
