<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#5f1111"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Entrada"
        android:layout_width="364dp"
        android:layout_height="59dp"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="80dp"
            android:columnCount="5"
            android:orientation="horizontal"
            android:padding="15dp"
            android:rowCount="6">

            <Button
                android:id="@+id/Ac"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#000000"
                android:onClick="borrado"
                android:text="Ac"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Del"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#000000"
                android:onClick="borrado"
                android:text="Del"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/A"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#000000"
                android:text="A"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Porcentaje"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Factorial"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="!"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Uno"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Dos"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="2"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Tres"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Raiz"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="√"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Exponente"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="^"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Cuatro"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="4"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Cinco"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="5"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Seis"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="6"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Mas"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="➕"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Menos"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="➖"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Siete"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="7"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Ocho"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="8"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Nueve"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="9"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Division"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="➗"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Multiplicar"
                android:layout_width="61dp"
                android:layout_margin="2dp"
                android:background="#000000"
                android:onClick="operaciones"
                android:text="✖"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Punto"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="."
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Cero"
                android:layout_width="61dp"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="numeros"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Resultado"
                android:layout_columnSpan="3"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:layout_marginTop="3dp"
                android:background="#a10606"
                android:onClick="resultado"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="40dp" />

            <EditText
                android:id="@+id/Marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="5"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Calculadora|AMGC|"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

        </GridLayout>
    </LinearLayout>


</LinearLayout>