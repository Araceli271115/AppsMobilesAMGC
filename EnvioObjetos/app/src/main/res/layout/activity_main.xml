<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp">

    <TableRow
        android:id="@+id/SeparadorLogo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.001"
        android:background="@android:color/background_light"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/Portada"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorBuscador"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.001">


        <EditText
            android:id="@+id/edt_busqueda"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:background="@android:color/background_light">
        </EditText>

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@android:drawable/ic_search_category_default"
            android:onClick="buscar" />

        <Button
            android:id="@+id/btnAgregarMiembro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@android:drawable/ic_input_add"
            android:onClick="registrar" />
    </TableRow>

    <TableRow
        android:id="@+id/SeparadorLista"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0006"
        android:layout_marginBottom="2dp"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/TextViewNombre"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="2dp"
            android:text="Nombre"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:background="@android:color/darker_gray">
        </TextView>
        <TextView
            android:id="@+id/TextViewApellidoP"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="2dp"
            android:text="Apellido P."
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:background="@android:color/darker_gray">
        </TextView>
        <TextView
            android:id="@+id/TextViewApellidoM"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="Apellido M."
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:background="@android:color/darker_gray">
        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/SeparadorListaDatos"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/txt_personas"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="2dp"
            android:text=""
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:background="@android:color/background_light">
        </TextView>

    </TableRow>

</TableLayout>