<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:id="@+id/SeparadorTitulo"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Formulario Empleado"
                android:textColor="@android:color/background_light"
                android:textSize="25dp"
                android:textStyle="italic"
                android:typeface="serif" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/TextViewTituloDP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="-------- Datos Personales --------"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />
        </TableRow>
        <TableRow
            android:id="@+id/SeparadorId"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Id"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow
            android:id="@+id/SeparadorNombre"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Nombre"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/SeparadorApellidoP"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewApellidoP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Apellido P."
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextApellidoP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow
            android:id="@+id/SeparadorApellidoM"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewApellidoM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Apellido M."
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextApellidoM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow
            android:id="@+id/SeparadorEdad"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewEdad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Edad"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextEdad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow
            android:id="@+id/SeparadorTelefono"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Telefono"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow
            android:id="@+id/SeparadorDireccion"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="DirecciÃ³n"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/SeparadorCorreo"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Correo"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/background_light"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/SeparadorBotones"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardad" />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar" />

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultar" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar" />
        </TableRow>
    </TableLayout>

</LinearLayout>
